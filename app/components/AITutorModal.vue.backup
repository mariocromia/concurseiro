</template>

<script setup lang="ts">
interface Message {
  role: 'user' | 'assistant'
  content: string
}

interface Props {
  isOpen: boolean
}

const props = defineProps<Props>()
const emit = defineEmits<{
  close: []
}>()

const supabase = useSupabaseClient()
const user = useSupabaseUser()
const { sendMessage: sendAIMessage } = useGemini()

const subjects = ref<any[]>([])
const notebooks = ref<any[]>([])
const sections = ref<any[]>([])

const selectedSubjectId = ref('')
const selectedNotebookId = ref('')
const selectedSectionId = ref('')

const chatStarted = ref(false)
const contextInfo = ref('')
const contextContent = ref('')

const messages = ref<Message[]>([])
const inputMessage = ref('')
const loading = ref(false)
const loadingContext = ref(false)
const error = ref('')

const messagesEndRef = ref<HTMLElement | null>(null)

// Load subjects
const loadSubjects = async () => {
  if (!user.value) return

  const { data, error: err } = await supabase
    .from('subjects')
    .select('*')
    .eq('user_id', user.value.id)
    .order('name')

  if (!err && data) {
    subjects.value = data
  }
}

// Load notebooks when subject changes
const onSubjectChange = async () => {
  selectedNotebookId.value = ''
  selectedSectionId.value = ''
  notebooks.value = []
  sections.value = []

  if (!selectedSubjectId.value) return

  const { data, error: err } = await supabase
    .from('notebooks')
    .select('*')
    .eq('subject_id', selectedSubjectId.value)
    .order('title')

  if (!err && data) {
    notebooks.value = data
  }
}

// Load sections when notebook changes
const onNotebookChange = async () => {
  selectedSectionId.value = ''
  sections.value = []

  if (!selectedNotebookId.value) return

  const { data, error: err } = await supabase
    .from('notebook_sections')
    .select('*')
    .eq('notebook_id', selectedNotebookId.value)
    .order('order_index')

  if (!err && data) {
    sections.value = data
  }
}

// Start chat with context
const startChat = async () => {
  error.value = ''
  loadingContext.value = true

  try {
    const subject = subjects.value.find(s => s.id === selectedSubjectId.value)
    if (!subject) throw new Error('Mat√©ria n√£o encontrada')

    // Build context info
    let info = subject.name
    let content = ''

    if (selectedSectionId.value) {
      const section = sections.value.find(s => s.id === selectedSectionId.value)
      if (section) info += ` - ${section.title}`

      // Get section content
      const { data: pages } = await supabase
        .from('notebook_pages')
        .select('content')
        .eq('section_id', selectedSectionId.value)
        .order('order_index')

      content = pages?.map(p => p.content).join('\n\n') || ''
    } else if (selectedNotebookId.value) {
      const notebook = notebooks.value.find(n => n.id === selectedNotebookId.value)
      if (notebook) info += ` - ${notebook.title}`

      // Get notebook content
      const { data: notebookSections } = await supabase
        .from('notebook_sections')
        .select('id')
        .eq('notebook_id', selectedNotebookId.value)

      if (notebookSections && notebookSections.length > 0) {
        const sectionIds = notebookSections.map(s => s.id)
        const { data: pages } = await supabase
          .from('notebook_pages')
          .select('content')
          .in('section_id', sectionIds)
          .order('order_index')

        content = pages?.map(p => p.content).join('\n\n') || ''
      }
    }

    // Strip HTML
    if (content) {
      const tempDiv = document.createElement('div')
      tempDiv.innerHTML = content
      content = tempDiv.textContent || tempDiv.innerText || ''
    }

    contextInfo.value = info
    contextContent.value = content

    chatStarted.value = true
  } catch (err: any) {
    error.value = err.message || 'Erro ao carregar contexto'
  } finally {
    loadingContext.value = false
  }
}

// Send message
const sendMessage = async () => {
  if (!inputMessage.value.trim() || loading.value) return

  const userMessage = inputMessage.value.trim()
  messages.value.push({ role: 'user', content: userMessage })
  inputMessage.value = ''

  scrollToBottom()
  loading.value = true

  try {
    // Build context prompt
    let contextPrompt = `Voc√™ √© um tutor educacional brasileiro especializado em concursos e vestibulares, focado em ${contextInfo.value}.

Responda de forma clara, did√°tica e em portugu√™s do Brasil. Use exemplos pr√°ticos e seja encorajador.`

    if (contextContent.value) {
      contextPrompt += `\n\nContexto do conte√∫do estudado pelo aluno:\n${contextContent.value.substring(0, 2000)}`
    }

    contextPrompt += `\n\nIMPORTANTE: Voc√™ pode usar TODO o seu conhecimento sobre ${contextInfo.value} para responder. N√£o se limite apenas ao que est√° no contexto acima - use-o como refer√™ncia, mas complemente com toda a sua expertise sobre o assunto.`

    const response = await sendAIMessage(userMessage, contextPrompt)
    messages.value.push({ role: 'assistant', content: response })
    scrollToBottom()
  } catch (err: any) {
    console.error('Error sending message:', err)
    messages.value.push({
      role: 'assistant',
      content: 'Desculpe, ocorreu um erro ao processar sua mensagem. Por favor, tente novamente.'
    })
  } finally {
    loading.value = false
  }
}

const scrollToBottom = () => {
  nextTick(() => {
    messagesEndRef.value?.scrollIntoView({ behavior: 'smooth' })
  })
}

const changeContext = () => {
  chatStarted.value = false
  messages.value = []
  contextInfo.value = ''
  contextContent.value = ''
}

const close = () => {
  emit('close')
  // Reset
  setTimeout(() => {
    chatStarted.value = false
    messages.value = []
    inputMessage.value = ''
    selectedSubjectId.value = ''
    selectedNotebookId.value = ''
    selectedSectionId.value = ''
    contextInfo.value = ''
    contextContent.value = ''
    notebooks.value = []
    sections.value = []
    error.value = ''
  }, 300)
}

// Watch for modal open
watch(() => props.isOpen, (newVal) => {
  if (newVal) {
    loadSubjects()
  }
})
</script>

